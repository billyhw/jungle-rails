<% quantity = product_id.quantity.to_i %>
<% if product = Product.find_by(id: product_id.product_id) %>
  <% item_total = product.price * quantity %>
  <% @order_total += item_total %>
  <tr>
    <td>
      <%= product.name %>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= quantity %>
    </td>
    <td>
      <%= item_total %>
    </td>
  </tr>
<% end %>